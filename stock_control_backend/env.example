# Stock Control Backend - Environment Variables
# Copy this file to .env and configure with your values

# =============================================================================
# BASIC SETTINGS
# =============================================================================

# Django Secret Key (generate a new one for production)
SECRET_KEY=your-secret-key-here

# Debug mode (False for production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (Development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/stock_control

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT Token lifetimes (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/var/log/stock_control/django.log

# =============================================================================
# CACHE CONFIGURATION (Optional)
# =============================================================================

# Redis URL (for caching)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# STATIC FILES CONFIGURATION
# =============================================================================

# Static files URL
STATIC_URL=/static/

# Static files root
STATIC_ROOT=/var/www/stock_control/staticfiles/

# Media files URL
MEDIA_URL=/media/

# Media files root
MEDIA_ROOT=/var/www/stock_control/media/

# =============================================================================
# SECURITY SETTINGS (Production)
# =============================================================================

# Security settings for production
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# HTTPS settings (set to True in production with HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# API SETTINGS
# =============================================================================

# Pagination settings
PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600  # 1 hour

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_STOCK_ALERTS=True
ENABLE_AUTO_BACKUP=True
ENABLE_API_DOCS=True

